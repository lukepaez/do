{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "alwaysStrict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests/**/*.ts"]
}
