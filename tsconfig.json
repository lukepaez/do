{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "**/*.db"],
    "exclude": ["node_modules"]
}
